<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="30dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterCustomerActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/card_valid_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_check_circle"/>
        <TextView
            android:id="@+id/card_valid_msg"
            android:layout_toRightOf="@id/card_valid_icon"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/textLightGrey"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_validated"
            android:textSize="25dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="42dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/visa"
            android:padding="3dp"
            android:background="@drawable/card_border"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="46dp"
            android:layout_marginLeft="5dp"
            android:layout_height="30dp"
            android:src="@drawable/MASTER"
            android:padding="3dp"
            android:background="@drawable/card_border"/>
        <ImageView
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:src="@drawable/verve"
            android:padding="3dp"
            android:background="@drawable/card_border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/formLabel"
                android:text="@string/card_number"/>

        </RelativeLayout>

        <EditText
            style="@style/inputText"
            android:inputType="number"
            android:hint="@string/placeholder_card_number"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_card_expiry"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/formLabel"
                android:text="@string/expiry_date"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    style="@style/inputText"
                    android:inputType="number"
                    android:hint="@string/card_month"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/slash"/>
                <EditText
                    style="@style/inputText"
                    android:inputType="number"
                    android:hint="@string/card_year"
                    android:padding="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/formLabel"
                android:text="@string/cvv"/>
            <EditText
                style="@style/inputText"
                android:inputType="number"
                android:hint="@string/placeholder_cvv"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/formLabel"

            android:text="@string/card_holder"/>
        <EditText
            style="@style/inputText"
            android:textAllCaps="true"
            android:inputType="text"
            android:hint="@string/placeholder_card_holder"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/formLabel"
            android:text="@string/phone_label"/>
        <EditText
            style="@style/inputText"
            android:inputType="number"
            android:hint="@string/placeholder_card_phone"
            android:padding="10dp"/>
    </LinearLayout>

    <Button
        style="@style/submitButton"
        android:text="@string/register_card"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_credit_card"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"/>
</LinearLayout>